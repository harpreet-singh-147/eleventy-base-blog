{%- css %}{% include "public/css/login.css" %}{% endcss %}
<h1 class="text-center">Login</h1>

<form class="row login-form d-flex flex-col justify-content-center mt-4" novalidate>
    <div class="col-md-8">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="username" name="username" required aria-required="true" aria-invalid="false" autofocus aria-describedby="usernameValidFeedback usernameInvalidFeedback">
            <label for="username" class="form-label">Username</label>
            <div class="valid-feedback" id="usernameValidFeedback">
                Looks good!
            </div>
            <div class="invalid-feedback" id="usernameInvalidFeedback">
                Username must be at least 8 characters long
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="form-floating mb-3">
            <input type="password" class="form-control" id="password" name="password" required aria-required="true" aria-invalid="false" aria-describedby="passwordValidFeedback passwordInvalidFeedback">
            <label for="password" class="form-label">Password</label>
            <div class="valid-feedback" id="passwordValidFeedback">
                Looks good!
            </div>
            <div class="invalid-feedback" id="passwordInvalidFeedback">
                Password must be at least 8 characters long
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <button class="btn btn-primary w-100 p-3" type="submit">Login</button>
    </div>
</form>